@model OrganicShop.Data.ViewModels.UpdateCategoriesViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">  <a asp-action="Index">Home  </a>  </li>
        <li class="breadcrumb-item">  <a href="#">Systems </a> </li>
        <li class="breadcrumb-item">  <a href="#">Categories </a> </li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mdi-page-layout-header no-gutters has-tab">
        <div class="d-md-flex align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
            </div>
            <div class="m-b-15">
                <button class="btn btn-primary">
                    <i class="mdi mdi-plus-circle">
                        <span>Create</span>
                    </i>
                </button>
            </div>
        </div>
    </div>

    <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#nav-tabs-home" role="tab"
               aria-controls="nav-tabs" aria-selected="true">Category Infomation</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="nav-profile-tab" data-toggle="pill" href="#nav-profile" role="tab"
               aria-controls="nav-profile" aria-selected="false">SEO Information</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="nav-mota-tab" data-toggle="pill" href="#nav-mota" role="tab"
               aria-controls="nav-mota" aria-selected="false">Description</a>
        </li>
    </ul>

    <div class="tab-content m-t-15" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-tabs-home" role="tabpanel" aria-labelledby="nav-home-tab">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-bold" for="Title">Category Name</label>
                        <input type="text" class="form-control" asp-for="CatName" required />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" for="Title">Title</label>
                        <input type="text" class="form-control" asp-for="Title" required />
                    </div>
                   
                    <div class="form-group">
                        <label class="font-weight-bold" for="Thumb">Image</label>
                        <input name="Photo" type="file" class="form-control" asp-for="Photo" required />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                  
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label class="font-weight-bold" for="Title">Ordering</label>
                            <input type="number" class="form-control" asp-for="Ordering" required />
                        </div>
                        <div class="form-group col-md-4">
                            <label class="font-weight-bold" for="Title">ParentID</label>
                            <input type="number" class="form-control" asp-for="ParentID" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group d-flex align-items-center">
                            <p style="color:red">Published</p>   &nbsp;
                            <label class="switch switch-info switch-pill form-control-label mr-2">
                                <input type="checkbox" class="switch-input form-check-input" asp-for="Published">
                                <span class="switch-label" style="background-color: #8a909d;"></span>
                                <span class="switch-handle"></span>
                            </label>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-bold" for="MetaDesc">MetaDesc</label>
                        <input type="text" class="form-control" asp-for="MetaDesc" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" for="MetaKey">MetaKey</label>
                        <input type="text" class="form-control" asp-for="MetaKey" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" for="MetaKey">Scheme Markup</label>
                        <input type="text" class="form-control" asp-for="SchemeMarkup" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" for="MetaKey">Cover</label>
                        <input type="text" class="form-control" asp-for="Cover" />
                    </div>
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="nav-mota" role="tabpanel" aria-labelledby="nav-mota-tab">
            <div class="card">
                <div class="card-body">
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</form>
<hr />
<div>
    <a asp-action="Index"><i class="mdi mdi-arrow-left-bold" style="font-size: 20px;"><span>Back</span></i></a>
</div>
@section Scripts
    {
    @await Html.PartialAsync("_Summernote", new {height = 200, selector = "#Description"})
}



