@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Categories</span>
                    </div>
                    <partial name="~/Views/Shared/GetProductByCat.cshtml" />
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form method="get" asp-action="Index" asp-controller="Shop">
            
                            <input value="@ViewBag.searchString" name="searchString" type="text" placeholder="Search product?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+65 11.188.888</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
                <div class="hero__item set-bg" data-setbg="../img/hero/banner.jpg">
                    <div class="hero__text">
                        <span>FRUIT FRESH</span>
                        <h2>Vegetable <br />100% Organic</h2>
                        <p>Free Pickup and Delivery Available</p>
                        <a asp-controller="Shop" asp-action="Index" class="primary-btn">SHOP NOW</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                <partial name="~/Views/Shared/_CategorySlider.cshtml" />
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Promotional Products Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Promotional Products</h2>
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("ProductDiscount")
    </div>
    <div class="col-12 text-center my-3">
        <a asp-controller="Shop" asp-action="Discount_Product_List" title="Xem tất cả" class="btn btn-success">
            Xem tất cả <i class="fa fa-chevron-right"></i>
        </a>
    </div>
</section>

<!-- Promotional Products Section End -->
<!-- Fresh Food Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Fresh Food</h2>
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("_FeatureProduct", new{ searchCatName = "Fresh Food"})
    </div>
    <div class="col-12 text-center my-3">
        <a href="@Url.Action("Index","Shop",new { page=1 , searchString = "",categoryId = 16 })" title="Xem tất cả" class="btn btn-success">
            Xem tất cả <i class="fa fa-chevron-right"></i>
        </a>
    </div>
</section>

<!-- Fresh Food Section End -->

<!-- Best Sale Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Best Sale</h2>
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("ProductBestSale")
    </div>
    <div class="col-12 text-center my-3">
        <a asp-controller="Shop" asp-action="BestSale_Product_List" title="Xem tất cả" class="btn btn-success">
            Xem tất cả <i class="fa fa-chevron-right"></i>
        </a>
    </div>
</section>

<!-- Best Sale Section End -->

<!-- Banner Begin -->
<div class="banner">
    <div class="container">
        <div class="row">
            <partial name="~/Views/Shared/_BannerView.cshtml" />
        </div>
    </div>
</div>
<!-- Banner End -->
<!-- Latest Product Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Lastest Products</h2>
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("LatestProduct")
    </div>
    <div class="col-12 text-center my-3">
        <a asp-controller="Shop" asp-action="Index" title="Xem tất cả" class="btn btn-success">
            Xem tất cả <i class="fa fa-chevron-right"></i>
        </a>
    </div>
</section>

<!-- Latest Product Section End -->
<!-- Blog Section Begin -->
<section class="from-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title from-blog__title">
                    <h2>From The Blog</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <partial name="~/Views/Shared/_BlogListPartialView.cshtml" />

        </div>
    </div>
    <div class="col-12 text-center my-3">
        <a asp-controller="Blog" asp-action="Index" title="Xem tất cả" class="btn btn-success">
            Xem tất cả <i class="fa fa-chevron-right"></i>
        </a>
    </div>
</section>
<!-- Blog Section End -->
