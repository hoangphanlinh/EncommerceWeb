@using OrganicShop.Data
@inject AppDBContext data;

<div class="blog__sidebar__item">
    <h4>Search By</h4>
    <div class="blog__sidebar__item__tags">
        @foreach (var item in data.NewsDirectories.Where(x => x.Name != ""))
        {
            <a href="@Url.Action("Index","Blog",new { page=1 , searchString = ViewBag.searchString,categoryId = item.ID})">@item.Name</a>
        }
    </div>
</div>