@model IEnumerable<OrganicShop.Models.Posts>

<div class="blog__sidebar__recent">
    @foreach (var item in Model)
    {
        <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.PostID" class="blog__sidebar__recent__item">
            <div class="blog__sidebar__recent__item__pic">
                <img src="~/images/news/@item.Thumb" alt="@item.Title" style="width:70px; height:70px">
            </div>
            <div class="blog__sidebar__recent__item__text">
                <h6>@item.Title</h6>
                <span>@item.CreatedDate</span>
            </div>
        </a>

    }
</div>
