@model OrganicShop.Models.Posts
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="~/Views/Shared/_HeroSectionPartialView.cshtml" />
<br />
<!-- Blog Details Hero Begin -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog_details_hero_text" style="text-align: center">
                    <h2 style="font-weight:800">@Model.Title</h2>
                    <br />
                    <p>By @Model.Author |  @Model.CreatedDate | @Model.Views Views</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Hero End -->
<!-- Blog Details Section Begin -->
<section class="blog-details spad" style="padding-top: 30px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5 order-md-1 order-2">
                <div class="blog__sidebar">
                    <div class="blog__sidebar__search">
                        <form method="get" asp-action="Index" asp-controller="Blog">
                            <input value="@ViewBag.searchString" name="searchString" type="text" placeholder="Search...">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <partial name="~/Views/Shared/_BlogCategoriesPartialView.cshtml" />

                    <div class="blog__sidebar__item">
                        <h4>Recent News</h4>
                        @await Component.InvokeAsync("RecentBlog")

                    </div>
                    <partial name="~/Views/Shared/_BlogTagPartialView.cshtml" />

                </div>
            </div>
            <div class="col-lg-8 col-md-7 order-md-1 order-1">
                <div class="blog__details__text">
                    <img src="~/images/news/@Model.Thumb" alt="@Model.Title">
                    @Html.Raw(Model.Contents)
                </div>
                <div class="blog__details__content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="blog__details__author">
                                <div class="blog__details__author__pic">
                                    <img src="~/img/blog/details/details-author.jpg" alt="">
                                </div>
                                <div class="blog__details__author__text">
                                    <h6>@Model.Author</h6>
                                    <span>Admin</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="blog__details__widget">
                                <ul>
                                    <li><span>Categories:</span> @Model.NewsDirectory.Name</li>
                                    <li><span>Tags:</span> @Model.Tags</li>
                                </ul>
                                <div class="blog__details__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                    <a href="#"><i class="fa fa-linkedin"></i></a>
                                    <a href="#"><i class="fa fa-envelope"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->
<!-- Related Blog Section Begin -->
<section class="related-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related-blog-title">
                    <h2>Post You May Like</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @await Component.InvokeAsync("RelatedBlog",new{CategoryId = Model.PostID})
        </div>
    </div>
</section>
<!-- Related Blog Section End -->
